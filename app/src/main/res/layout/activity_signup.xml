<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignupActivity">

    <ImageView
        android:id="@+id/app_icon_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/sign_up_name"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:hint="Name"
        android:textColor="#181818"
        android:textColorHint="#505050"
        android:layout_below="@id/app_icon_"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_toStartOf="@id/sign_up_name"
        android:layout_height="30dp"
        android:layout_below="@id/app_icon_"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_person"
        android:contentDescription="Person" />


    <EditText
        android:id="@+id/sign_up_email"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/sign_up_name"
        android:textColor="#181818"
        android:inputType="textEmailAddress"
        android:hint="someone@email.com"
        android:textColorHint="#505050"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_below="@id/sign_up_name"
        android:layout_toStartOf="@id/sign_up_email"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_mail"
        android:contentDescription="Email" />


    <EditText
        android:id="@+id/sign_up_password"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/sign_up_email"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#181818"
        android:textColorHint="#505050" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_below="@id/sign_up_email"
        android:layout_toStartOf="@id/sign_up_password"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_lock"
        android:contentDescription="Password" />

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="200dp"
        android:layout_below="@id/sign_up_password"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#3E3C41"
        android:text="SIGNUP"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/trans_sign"
        android:background="@android:drawable/screen_background_dark_transparent" />

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_bar_sign"
        style="@style/SpinKitView.Circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:SpinKit_Color="#00E7C4"
        android:visibility="gone"/>

</RelativeLayout>