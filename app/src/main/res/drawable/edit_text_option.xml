<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list >
            <item
                android:bottom="5dp"
                android:left="-6dp"
                android:right="-6dp"
                android:top="-6dp">
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="5dp"
                        android:color="@color/white" />

                    <!--<solid android:color="@color/white" />-->

                    <padding android:left="3dp"
                        android:right="3dp"
                        android:top="3dp"
                        android:bottom="3dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list >
            <item
                android:bottom="5dp"
                android:left="-6dp"
                android:right="-6dp"
                android:top="-6dp">
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="5dp"
                        android:color="@color/white" />

                    <!--<solid android:color="@color/white" />-->

                    <padding android:left="3dp"
                        android:right="3dp"
                        android:top="3dp"
                        android:bottom="3dp" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item>
        <layer-list >
            <item
                android:bottom="5dp"
                android:left="-6dp"
                android:right="-6dp"
                android:top="-6dp">
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="5dp"
                        android:color="#FFFFFF" />

                    <solid android:color="#00FFFFFF" />

                    <padding android:left="3dp"
                        android:right="3dp"
                        android:top="3dp"
                        android:bottom="3dp" />
                </shape>
            </item>

        </layer-list>
    </item>

</selector>